
@{
    ViewBag.Title = "AddProduct";
}

<h2>Add a product</h2>
<ul class="nav nav-pills nav-stacked" role="tablist" style="display: inline-flex;margin-bottom:10px; background-color:#e3f2fd; border-radius: 5px;">
    <li>@Html.ActionLink("Customers", "Customers", "Admin")</li>
    <li>@Html.ActionLink("Orders", "Orders", "Admin")</li>
    <li>@Html.ActionLink("Products", "Products", "Admin")</li>
    <li>@Html.ActionLink("Search", "Search", "Admin")</li>
</ul>
<div class="table-responsive">
    <form method="post" action="/Admin/AddProduct">
        <table class="table table-condensed">
            <tbody>
                <tr>
                    <th>Product Name: </th>
                    <td><input type="text" name="pname"></td>
                </tr>
                <tr>
                    <th>Category: </th>
                    <td>
                        <input type="radio" name="category" value="Greeting Cards" checked> Greeting Cards<br>
                        <input type="radio" name="category" value="Notebook"> Notebook<br>
                        <input type="radio" name="category" value="Stationery"> Stationery<br>
                        <input type="radio" name="category" value="Easter Gifts"> Easter Gifts<br>
                        <input type="radio" name="category" value="Bath & Body"> Bath & Body<br>
                        <input type="radio" name="category" value="Candles"> Candles<br>
                    </td>
                </tr>
                <tr>
                    <th>Description: </th>
                    <td>
                        <textarea rows="4" cols="50" name="description"></textarea>
                    </td>
                </tr>
                <tr>
                    <th>Price: </th>
                    <td><input type="text" name="price"></td>
                </tr>
                <tr>
                    <th>Quantity: </th>
                    <td><input type="text" name="quantity"></td>
                </tr>
                <tr>
                    <th>Product Image: </th>
                    <td>
                        <input type="file" name="pic" accept="image/*">
                    </td>
                </tr>
            </tbody>
            <tfooter>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Save" class="btn btn-success">
                        <a class="btn btn-info" href='@string.Format("/Admin/Products")'>Back</a>
                    </td>
                </tr>
            </tfooter>
        </table>
    </form>
</div>
