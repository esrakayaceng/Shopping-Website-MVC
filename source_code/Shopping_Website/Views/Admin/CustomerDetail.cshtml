@using Shopping_Website.Models;
@{
    ViewBag.Title = "CustomerDetail";
}

<h2>Customer Detail</h2>
<ul class="nav nav-pills nav-stacked" role="tablist" style="display: inline-flex;margin-bottom:10px; background-color:#e3f2fd; border-radius: 5px;">
    <li>@Html.ActionLink("Customers", "Customers", "Admin")</li>
    <li>@Html.ActionLink("Orders", "Orders", "Admin")</li>
    <li>@Html.ActionLink("Products", "Products", "Admin")</li>
    <li>@Html.ActionLink("Search", "Search", "Admin")</li>
</ul>
<div class="flex-container" style="width: 75%">
@foreach (var value in (IEnumerable<UserModel>)ViewData["Info"])
{
    <div style="text-align: left;" class="viewProduct">
        <table>
            <thead></thead>
            <tbody>
                <tr><td><b>First Name: </b>@value.Firstname</td></tr>
                <tr><td><b>Last Name: </b>@value.Lastname</td></tr>
                <tr><td><b>Username: </b>@value.Username</td></tr>
                <tr><td><b>Password: </b>@value.Password</td></tr>
                <tr><td><b>Email Address: </b>@value.Email</td></tr>
            </tbody>
            <tfooter></tfooter>
        </table>
    </div>
    <div style="text-align: left;" class="viewProduct">
        <table>
            <thead></thead>
            <tbody>
                <tr><td><b>Address: </b>@value.Address</td></tr>
                <tr><td><b>City: </b>@value.City</td></tr>
                <tr><td><b>State: </b>@value.State</td></tr>
                <tr><td><b>Zip Code: </b>@value.ZipCode</td></tr>
                <tr><td><b>Phone Number: </b>@value.Phone</td></tr>
            </tbody>
            <tfooter>
            </tfooter>
        </table>
    </div>
}
</div>
<div>
    <a class="btn btn-info" href='@string.Format("/Admin/Customers")'>Back</a>
</div>
