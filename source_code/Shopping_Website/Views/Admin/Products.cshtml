        <div class="p-2">
            <a class="btn btn-warning" href='@string.Format("/Admin/AddProduct")'>Add Product</a>
        </div>
    </div>
    <br />
    <h3>Categories</h3>
    <div class="d-flex flex-nowrap">
        <div class="p-2">
            <a class="btn btn-success" href='@string.Format("/Admin/BathBody")'>Bath & Body</a>
            <a class="btn btn-success" href='@string.Format("/Admin/Candles")'>Candles</a>
            <a class="btn btn-success" href='@string.Format("/Admin/EasterGifts")'>Easter Gifts</a>
            <a class="btn btn-success" href='@string.Format("/Admin/GreetingCards")'>Greeting Cards</a>
            <a class="btn btn-success" href='@string.Format("/Admin/Notebook")'>Notebook</a>
            <a class="btn btn-success" href='@string.Format("/Admin/Stationery")'>Stationery</a>
        </div>
